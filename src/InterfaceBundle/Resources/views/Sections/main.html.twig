<!DOCTYPE html>
<html lang="en">

<head>

    {{ include('@Interface/_layout/skeleton.html.twig') }}

    <style>

        .pad{
            padding: 10px;
        }

        .table td {
            text-align: center;
        }

    </style>

</head>

<body>

    {{ include('@Interface/_layout/navbar.html.twig') }}

    <form method="POST">
        <div class="input-group col-md-10 col-md-offset-1 pad">
            <input type="text" class="form-control" placeholder="Search" name="sec_name" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>

    <div class="col-md-1 ">

        <div class="btn-group-vertical">
            <a class="btn btn-default glyphicon glyphicon-user"  href="{{  path('createSection') }}" > Vytvoriť</a>
        </div>

    </div>



    <div class="col-md-10 ">
        <table class="table table-hover table-striped">
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Created_at</th>
                <th class="text-center">Updated_at</th>
                <th class="text-center">Action</th>
            </tr>

            {% for section in sections %}
                <tr>
                    <td>{{ section.name }}</td>
                    <td>{{ section.createdAt }}</td>
                    <td>{{ section.updatedAt }}</td>
                    <td>
                        <a class="btn btn-default btn-xs" href="{{ path('administratorsSection', {'id':  section.id}) }}" >Administrátori</a>
                        <a class="btn btn-default btn-xs" href="{{ path('viewUsersSection', {'id':  section.id}) }}" >Užívatelia</a>
                        <a class="btn btn-default btn-xs" href="{{ path('readersSection', {'id':  section.id}) }}" >NFC čítačky</a>
                        <a class="btn btn-default btn-xs" href="{{ path('timeProfilesSection', {'id':  section.id}) }}" >Časové profily</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>


</body>
