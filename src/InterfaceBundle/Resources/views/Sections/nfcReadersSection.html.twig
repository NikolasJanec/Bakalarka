<!DOCTYPE html>
<html lang="en">

<head>

    {{ include('@Interface/_layout/skeleton.html.twig') }}

    <style>

        .pad{
            padding: 10px;
        }


    </style>

</head>


<body>

{{ include('@Interface/_layout/navbar.html.twig') }}

<div class="col-md-1 pad ">

    <div class="btn-group-vertical">
        <a class="btn btn-default glyphicon glyphicon-hand-left" style="margin-bottom: 20%" href="{{ relative_path('/sections') }}" > Späť</a>
        <a class="btn btn-default glyphicon glyphicon-hdd" style="margin-bottom: 20%" href="{{  path('createReaderSection', {'id':  id_section}) }}" > Vytvoriť</a>
    </div>

</div>


<form method="POST">
    <div class="input-group col-md-10 col-md-offset-1 pad">
        <input type="text" class="form-control" placeholder="Search" name="query" id="srch-term">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
</form>

<div class="col-md-10 ">
    <table class="table table-hover table-striped">
        <tr>
            <th>Name</th>
            <th>Section Name</th>
            <th>Type</th>
            <th>Date_Reg</th>
            <th>Action</th>
        </tr>

        {% for deviceReader in readers %}
            <tr>
                <td>{{ deviceReader.name }}</td>
                <td>{{ deviceReader.section.name }}</td>
                <td>{{ deviceReader.typeReader.code }}</td>
                <td>{{ deviceReader.createdAt }}</td>
                <td>
                    <a class="btn btn-default btn-xs" href="#" >Zobraziť</a>
                    <a class="btn btn-default btn-xs" href="{{ path('deleteReaderFromSection', {'id':  id_section, 'id_reader':  deviceReader.id}) }}" >Odstrániť</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>


</body>