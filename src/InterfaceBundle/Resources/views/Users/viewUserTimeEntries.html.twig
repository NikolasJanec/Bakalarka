<!DOCTYPE html>
<html lang="en">

<head>

    {{ include('@Interface/_layout/skeleton.html.twig') }}

    <style>

        .pad{
            padding: 10px;
        }


    </style>

</head>

<body>

{{ include('@Interface/_layout/navbar.html.twig') }}

<div class="col-md-1 pad ">

    <div class="btn-group-vertical">
        <a class="btn btn-default glyphicon glyphicon-hand-left" style="margin-bottom: 20%" href="{{ relative_path('/dashboard') }}" > Späť</a>
    </div>

</div>

{{ include('@Interface/Users/user.html.twig') }}



<div class="col-md-10 col-md-offset-1 pad">
    <div class="col-md-4 pad">

        <table class="table table-hover table-striped">
            <tr>
                <th>Sekcia</th>
                <th>Akcia</th>
            </tr>


            {% for section in sections %}

                <tr>
                    <td>{{ section.name }}</td>
                    <td>
                        <a class="btn btn-default btn-xs" href="{{ path('viewUserTimeEntries', {'id_user': user.id, 'id_section': section.id}) }}" >Vybrať</a>
                        <a class="btn btn-default btn-xs" href="{{ path('addUserTimeConcreteEntry', {'id_user': user.id, 'id_section': section.id}) }}" >Konkrétny prístup</a>
                        <a class="btn btn-default btn-xs" href="{{ path('addUserTimeEveryEntry', {'id_user': user.id, 'id_section': section.id}) }}" >Všeobecný prístup</a>

                    </td>

                </tr>

            {% endfor %}
        </table>

    </div>
    <div class="col-md-4 pad">

        <table class="table table-hover table-striped">
            <tr>
                <th>Dátum</th>
                <th>Od</th>
                <th>Do</th>
                <th>Status</th>
                <th>Akcia</th>
            </tr>


            {% for entry in spec_entries %}
                <tr>

                    <td>{{ entry.dayOfMonth }}:{{ entry.month }}:{{ entry.year }}</td>
                    <td> {{ entry.from2 }}</td>
                    <td>{{ entry.until2 }}</td>
                    <td>{{ entry.isActive2 }}</td>
                    <td> <a class="btn btn-default btn-xs" href="{{ path('deleteUserTimeEntry', {'id_user': user.id, 'id_section': id_section, 'id_entry': entry.id}) }}" >Odstrániť</a> </td>

                </tr>

            {% endfor %}


        </table>

    </div>

    <div class="col-md-4 pad">

        <table class="table table-hover table-striped">
            <tr>
                <th>Deň</th>
                <th>Od</th>
                <th>Do</th>
                <th>Status</th>
                <th>Akcia</th>
            </tr>


            {% for entry in eve_entries %}
                <tr>

                    <td>{{ entry.dayOfWeek2 }} </td>
                    <td> {{ entry.from2 }}</td>
                    <td>{{ entry.until2 }}</td>
                    <td>{{ entry.isActive2 }}</td>
                    <td> <a class="btn btn-default btn-xs" href="{{ path('deleteUserTimeEntry', {'id_user': user.id, 'id_section': id_section, 'id_entry': entry.id}) }}" >Odstrániť</a> </td>

                </tr>

            {% endfor %}


        </table>

    </div>
</div>
</body>