<!DOCTYPE html>
<html lang="en">

<head>

    {{ include('@Interface/_layout/skeleton.html.twig') }}

    <style>

        .pad{
            padding: 10px;
        }


    </style>

</head>

<body>

{{ include('@Interface/_layout/navbar.html.twig') }}

<div class="col-md-1 pad ">

    <div class="btn-group-vertical">
        <a class="btn btn-default glyphicon glyphicon-hand-left" style="margin-bottom: 20%" href="{{ relative_path('/dashboard') }}" > Späť</a>
    </div>

</div>

{{ include('@Interface/Users/user.html.twig') }}


<div class="col-md-10 col-md-offset-1 pad">


    <table class="table table-hover table-striped">
        <tr>
            <th>Označenie zariadenia</th>
            <th>uuid</th>
            <th>Dátum registrácie</th>
            <th>Akcia</th>
        </tr>

        {% for device in devices %}

            <tr>
                <td>{{ device.name }}</td>
                <td>{{ device.uuid }}</td>
                <td>{{ device.createdAt2 }}</td>
                <td>
                <a class="btn btn-default btn-xs" href="{{ path('deleteUserDevice',{ 'id_user': user.id, 'id_device': device.id}) }}" >Odstrániť</a>
                </td>
            </tr>

        {% endfor %}
    </table>
</div>

</body>