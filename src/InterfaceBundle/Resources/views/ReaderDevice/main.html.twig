<!DOCTYPE html>
<html lang="en">
<head>

{{ include('@Interface/_layout/skeleton.html.twig') }}

    <style>

        .pad{
            padding: 10px;
        }


    </style>

</head>

<body>

    {{ include('@Interface/_layout/navbar.html.twig') }}



    <form method="POST">
        <div class="input-group col-md-10 col-md-offset-1 pad">
            <input type="text" class="form-control" placeholder="Search" name="query" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>



    <div class="col-md-10 col-md-offset-1 pad">
        <table class="table table-hover table-condensed">
            <tr>
                <th>Názov</th>
                <th>Sekcia</th>
                <th>Typ</th>
                <th>Dátum Registrácie</th>
                <th>Akcia</th>
            </tr>

            {% for nfcReader in nfcReaders %}
                <tr>
                    <td>{{ nfcReader.name }}</td>
                    <td>{{ nfcReader.section.name }}</td>
                    <td>{{ nfcReader.typeReader.code }}</td>
                    <td>{{ nfcReader.createdAt }}</td>
                    <td>
                        <a href="{{ path('viewDeviceReader',{'id_reader': nfcReader.id}) }}">Zobrazit</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>

</html>