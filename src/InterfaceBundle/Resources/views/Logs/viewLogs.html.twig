<!DOCTYPE html>
<html lang="en">

<head>

    {{ include('@Interface/_layout/skeleton.html.twig') }}

    <style>

        .pad{
            padding: 10px;
        }

        .table td {
            text-align: center;
        }

    </style>

</head>

<body>

{{ include('@Interface/_layout/navbar.html.twig') }}

<div class="col-md-1 pad ">

    <div class="btn-group-vertical ">
       {% for section in sections %}
           <a class="btn btn-default " style="margin-bottom: 10%" href="{{ path('viewLogsInSection', {'id_section': section.id} ) }}" > {{ section.name }} </a>
        {% endfor %}
    </div>

</div>

<form method="POST">
    <div class="input-group col-md-10 col-md-offset-1 pad">
        <input type="text" class="form-control" placeholder="Search" name="sec_name" id="srch-term">
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
</form>


<div class="col-md-10  ">
    <table class="table table-hover table-striped">
        <tr>
            <th class="text-center">Administrator</th>
            <th class="text-center">Akcia</th>
            <th class="text-center">Komu</th>
            <th class="text-center">Sekcia</th>
            <th class="text-center">DÃ¡tum</th>
        </tr>

        {% for log in logs %}
            <tr>
                {% if log.administratorId != null %}
                    <td>{{ log.administrator.username }}</td>
                    <td>{{ log.activity }}</td>
                    {% if log.userId != null %}
                        <td>{{ log.user.username }}</td>
                    {% elseif log.deviceReaderId != null %}
                        <td>{{ log.deviceReader.name }}</td>
                    {% endif %}
                    <td>{{ log.section.name }}</td>
                    <td>{{ log.createdAt2 }}</td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
</div>


</body>