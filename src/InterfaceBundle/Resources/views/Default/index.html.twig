
<!DOCTYPE html>
<html lang="en">
<head>
{{ include('@Interface/_layout/skeleton.html.twig') }}
    <style>

        .pad{
            padding: 10px;
        }


    </style>

</head>

<body>

{{ include('@Interface/_layout/navbar.html.twig') }}

<div class="col-md-1 pad ">

    <div class="btn-group-vertical">
        <a class="btn btn-default" href="{{ relative_path('/registration')}}">Registrácia</a>
    </div>

</div>



    <form method="POST">
        <div class="input-group col-md-10 col-md-offset-1 pad">
            <input type="text" class="form-control" placeholder="Search" name="query" id="srch-term">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>



    <div class="col-md-10 col-md-offset-1">
        <table class="table table-hover table-condensed">
            <tr>
                <th>Meno</th>
                <th>Priezvisko</th>
                <th>Používateľské meno</th>
                <th>Dátum registrácie</th>
                <th>Akcia</th>
            </tr>

            {% for user in users %}
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.userName }}</td>
                    <td>{{ user.createdAt2 }}</td>
                    <td>
                        <a href="{{ path('viewUser', {'id_user':  user.id}) }}">Zobrazit</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

    </body>


